<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="150dp">

    <TextView
        android:id="@+id/name_rv"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="13dp"
        android:text="Name" />

    <TextView
        android:id="@+id/amount_rv"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:layout_alignBottom="@+id/name_rv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

    <TextView
        android:id="@+id/description_rv"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/name_rv"
        android:layout_alignStart="@+id/name_rv" />

    <Button
        android:id="@+id/edit_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/description_rv"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/description_rv"
        android:text="Edit" />

    <Button
        android:id="@+id/delete_bt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/amount_rv"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/amount_rv"
        android:text="Delete" />
</RelativeLayout>